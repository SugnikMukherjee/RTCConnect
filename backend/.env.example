# Environment Variables Configuration Template
# Copy this file to .env and update the values

# Server Configuration
PORT=3001
NODE_ENV=development
CLIENT_URL=http://localhost:3000

# WebRTC Configuration - STUN/TURN Servers
STUN_SERVER_URL=stun:stun.l.google.com:19302
STUN_SERVER_URL_2=stun:stun1.l.google.com:19302

# TURN Server Configuration (Required for production)
# Get free TURN servers from: https://www.metered.ca/tools/openrelay/
TURN_SERVER_URL=turn:relay1.expressturn.com:3478
TURN_USERNAME=your-turn-username
TURN_PASSWORD=your-turn-password

# Alternative TURN servers
# COTURN_URL=turn:coturn.your-domain.com:3478
# COTURN_USERNAME=your-coturn-username
# COTURN_PASSWORD=your-coturn-password

# Security Configuration (Change in production!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
CORS_ORIGIN=http://localhost:3000
SESSION_SECRET=your-session-secret-key-change-in-production

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE_PATH=./logs/app.log

# Room Management
MAX_PARTICIPANTS_PER_ROOM=8
ROOM_CLEANUP_INTERVAL=60000
ROOM_IDLE_TIMEOUT=300000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Socket.IO Configuration
SOCKET_PING_TIMEOUT=20000
SOCKET_PING_INTERVAL=25000

# Media Configuration
MAX_VIDEO_BITRATE=1000000
MAX_AUDIO_BITRATE=64000
VIDEO_RESOLUTION=720p